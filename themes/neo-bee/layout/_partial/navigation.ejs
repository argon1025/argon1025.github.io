<div class="flex fixed top-0 left-0 justify-center items-center w-full p-5 bg-white ">
    <div class="flex flex-row w-full max-w-5xl justify-center items-center ">
        <!-- Logo -->
        <% if(theme.navigation.logo){ %>
            <% if(!theme.navigation.logo.useImage){ %>
                <a href="/">
                    <h1 class="text-2xl font-semibold"><%- theme.navigation.logo.titleText %></h1>
                </a>
            <% }else{%>
                <a href="/">
                    <img src="<%- theme.navigation.logo.titleImage %>" alt="<%- theme.navigation.logo.titleText %>" class="w-28">
                </a>
            <% } %>
        <% }%>
        <!-- Logo End -->
        
        <!-- Space -->
        <div class="flex grow"></div>
        <!-- Space End -->

        <!-- Menu -->
        <ul class="flex flex-row space-x-10">
        <% for(let item of theme.navigation.menu) { if (item.use) { %>
            <li class="font-semibold hover:text-<%= item.hoverColor %>-400 transition duration-300 ease-in-out" data-path="<%- item.path %>">
                <a href="<%- item.path %>"><%- item.name %></a>
            </li>
        <% } } %>
        </ul>
        <!-- Menu End -->
    </div>
</div>