<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="keywords" content="<%= config.keywords %>" />
  <meta name="author" content="<%= config.author %>" />
  <meta name="description" content="<%= config.description %>" />
  <% if(is_home() && page.current > 1){ %>
    <meta name="robots" content="noindex" />
  <% } %>

  <!-- Title - 타이틀 설정 -->
  <%
    var title = page.title;

    if (is_archive()){
      title = 'archive_a';

      if (is_month()){
        title += ': ' + page.year + '/' + page.month;
      } else if (is_year()){
        title += ': ' + page.year;
      }
    } else if (is_category() || title === "categories"){
      title = "category"
    } else if (is_tag() || title === "tags"){
      title = "tag"
    } else if (title === "friends") {
      title = "friend"
    } else if (title === "about") {
      title = "about"
    }
  %>
  <title>
    <% if (title) { %>
      <%= __(title) %> 
      <% if (page.tag) { %> : <%= page.tag %><% } %>
      <% if (page.category) { %> : <%= page.category %><% } %>
      |
    <% } %>
    <%= config.title %>
  </title>
  <!-- Title - 타이틀 설정 -->

  <!-- Favicon - 파비콘 설정 -->
  <% if (theme.favicon.enable){ %>
    <link rel="apple-touch-icon" href="<%- theme.favicon.touch_icon %>">
    <link rel="icon" href="<%- theme.favicon.icon %>">
  <% } %>
  <!-- Favicon - 파비콘 설정 -->

  <!-- TailwindCSS -->
  <script src="https://cdn.tailwindcss.com?plugins=typography"></script>
  
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            'sans': ['Inter', 'Poppins', 'Noto Sans KR'],
          }
        }
      }
    }
  </script>
  <!-- TailwindCSS -->

  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Noto+Sans+KR:wght@300;400;500&family=Poppins:wght@300;400&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/093ff3a650.js" crossorigin="anonymous"></script>

  <!-- CSS -->
  <link rel="stylesheet" href="/css/main.css" />
  
  <!-- CodeBlock - 코드 블럭 -->
  <% if (theme.codeBlock && theme.codeBlock.style && theme.codeBlock.style == 'mac-black'){ %>
    <%- css(['/css/figcaption/mac-block.css'])%>
  <% } %>
  
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-B53XS1BKC4"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-B53XS1BKC4');
</script>

  <% if (theme.footer.views && theme.footer.views.enable) { %>
    <script async src="<%- theme.footer.views.provider %>"></script>
  <% } %>

  <script>
    var html = document.documentElement
    const colorMode = localStorage.getItem('color-mode')
    if (colorMode) {
      document.documentElement.setAttribute('color-mode', colorMode)
    }
  </script>
</head>
