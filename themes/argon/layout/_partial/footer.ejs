<div class="flex flex-col justify-center items-center relative inset-x-0 bottom-0  pt-15">
  <div>
    <ul>
      <% for(let item of theme.footer.social){ %>
        <li>
          <a title="<%- item.name %>" href="<%- item.path %>">
            <i class="text-gray-400 fa-brands fa-<%- item.icon %>"></i>
          </a>
        </li>
      <% } %>
    </ul>
  </div>
  <div>
    <span class="text-sm font-medium text-gray-400"><%- theme.footerContent.copyright -%></span>
  </div>
  <div class="flex flex-row mt-2 pt-2 border-t">
    <div class="flex flex-row p-2 mr-1 rounded-full h-7 bg-gray-300 shadow-lg ease-out duration-300 cursor-pointer hover:shadow-gray-500/50" onclick="window.open('mailto:<%- theme.avatar.author_email %>')"><%- simpleIcons('siGmail','p-2','fill-white','h-7','w-7').svg %><p>메일 전송</p></div>
    <div class="flex flex-row p-2 mr-1 rounded-full h-7 bg-gray-300 shadow-lg ease-out duration-300 cursor-pointer hover:shadow-gray-500/50" onclick="window.open('<%- theme.avatar.author_github %>')"><%- simpleIcons('siGithub','p-2','fill-white','h-7','w-7').svg %><p>메일 전송</p></div>
</div>
</div>
