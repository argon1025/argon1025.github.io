<div class="flex flex-col items-center sm:flex-row m-10">
    <!-- Profile Image-->
    <div class="w-20 h-20 drop-shadow-lg p-1">
        <div class="rounded-full overflow-hidden w-full h-full">
            <img
            class="object-cover"
            src="<%- theme.avatar.author_photo %>"
            alt="avatar"
          />
        </div>
    </div>
    <!-- 소개 -->
    <div class="flex flex-col w-72 text-center sm:text-left sm:ml-5 sm:w-80">
        <!-- 닉네임, 직업 -->
        <div class="flex flex-col sm:flex-row align-baseline items-center">
            <p class="text-lg font-semibold text-gray-900">
                <%- theme.avatar.author_nickname %>
            </p>
            <p class="text-xs text-gray-300 m-1">
                <%- theme.avatar.author_job %>
            </p>
        </div>
        <!-- BIO -->
        <% if(is_home()) { %>
            <div>
                <p class="text-sm text-gray-700" >
                    <%- theme.avatar.author_bio %>
                </p>
            </div>
        <% } %>
    </div>
</div>